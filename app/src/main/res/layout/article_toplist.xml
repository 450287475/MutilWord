<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp">

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_read_hotarticl"
        android:layout_width="match_parent"
        android:layout_height="150dp"></android.support.v4.view.ViewPager>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:background="#55888888"
        android:gravity="center"
        android:padding="5dp">

        <TextView
            android:id="@+id/tv_read_imagetitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text=""
            android:textColor="#EE7600"
            android:textSize="15sp" />
    </LinearLayout>

    <com.viewpagerindicator.CirclePageIndicator
        android:id="@+id/ci_read_indicator"
        app:radius="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="right"
        android:padding="10dp" />
</RelativeLayout>