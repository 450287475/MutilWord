    <RelativeLayout
        android:id="@+id/ignore_view"
        android:padding="10dp"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:id="@+id/ll_word"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

            <ImageView
                style="@style/ImageViewStyle"
                android:id="@+id/iv_word"
                android:src="@drawable/word"
                />
            <TextView
                android:id="@+id/tv_word"
                style="@style/TextViewStyle"
                android:text="背单词"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_read"
            android:layout_alignParentRight="true"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                style="@style/ImageViewStyle"
                android:id="@+id/iv_read"
                android:src="@drawable/read"
                />
            <TextView
                android:id="@+id/tv_read"
                style="@style/TextViewStyle"
                android:text="美文阅读"

                />
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:padding="10dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:id="@+id/ll_exam"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                style="@style/ImageViewStyle"
                android:id="@+id/iv_exam"
                android:src="@drawable/exam"
                />
            <TextView
                android:id="@+id/tv_exam"
                style="@style/TextViewStyle"
                android:text="测试训练"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_listen"
            android:layout_alignParentRight="true"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                style="@style/ImageViewStyle"
                android:id="@+id/iv_listen"
                android:src="@drawable/listen"
                />
            <TextView
                android:id="@+id/tv_listen"
                style="@style/TextViewStyle"
                android:text="听力训练"

                />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>

