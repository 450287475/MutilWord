        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="66dp">
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="手机号:"
                    android:textColor="#fff"
                    android:textSize="20sp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="请输入手机号"
                    android:textSize="13sp"
                    android:textColor="@color/holo_white_gray"
                    android:textColorHint="#d2c9c9"
                    android:id="@+id/ed_retrievePassword_phone" />
        </LinearLayout>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取验证码"
            android:onClick="getVerifyCode"
            android:textSize="20sp"
            android:textColor="#fff"
            android:background="@android:color/transparent"
            android:layout_below="@+id/linearLayout4"
            android:layout_alignParentStart="true"
            android:layout_marginStart="42dp"
            android:layout_marginTop="25dp"
            android:id="@+id/button3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="120dp"
            android:id="@+id/linearLayout4">
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="验证码:"
                    android:textColor="#fff"
                    android:textSize="20sp"/>

                <EditText
                    android:id="@+id/ed_retrievePassword_verifycode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="请输入验证码"
                    android:textColor="@color/holo_white_gray"
                    android:textSize="13sp"
                    android:textColorHint="#d2c9c9"

                    />
        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bt_retrievePasswor_register"
            android:text="找回密码"
            android:onClick="retrievePasswor"
            android:textSize="20sp"
            android:textColor="#fff"
            android:layout_alignTop="@+id/button3"
            android:layout_toEndOf="@+id/button3"
            android:background="@android:color/transparent"
            android:layout_marginStart="66dp" />



    <LinearLayout
        android:id="@+id/ll_retrievePasswor_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="260dp"
        android:orientation="horizontal"
        android:visibility="invisible">
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码为:"
            android:textColor="#fff"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ed_retrievePasswor_password" />
    </LinearLayout>

</RelativeLayout>
